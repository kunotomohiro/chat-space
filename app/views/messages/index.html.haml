    %form.new-message
      %input.new-message__input{placeholder: "type a message"}
        %label.label
          %span.filelabel
            = fa_icon 'image', class: "image"
          %input{type: "file", name: "datafile", id: "filesend"}
      = link_to "", class: "Form-input-box-Send" do
        Send
